<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

</head>

<body>

    <table class="table" border="1">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Employee Name</th>
                <th scope="col">Post</th>
                <th scope="col">Zender</th>
            </tr>
        </thead>
        <tbody>

            <% emp.forEach(function(em){ %>
                <tr>
                    <th scope="row">
                        <%= em.id %>
                    </th>
                    <td>
                        <%= em.name %>
                    </td>
                    <td>
                        <%= em.post %>
                    </td>
                    <td>
                        <%= em.zender %>
                    </td>

                    <td class="border border-end border-dark"><button type="submit" class="btn btn-primary">
                            <a href="/edit/<%= em.id %>" class="text-light">Edit</a>
                        </button>
                        ||
                        <button type="submit" class="btn btn-danger">
                            <a href="/delete/<%= em.id %>" class="text-light">Delete</a>
                        </button>
                    </td>

                </tr>
                <% }); %>
        </tbody>
    </table>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>